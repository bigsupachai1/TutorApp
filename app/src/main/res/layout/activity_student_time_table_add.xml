<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="siam.big.tutor.student.activity.home.timetable.TimeTableAddActivity">
   <android.support.v7.widget.Toolbar
       android:id="@+id/toolbar"
       app:contentInsetLeft="0dp"
       app:contentInsetStart="0dp"
       app:contentInsetRight="0dp"
       app:contentInsetEnd="0dp"
       app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
       app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
       style="@style/toolbar">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
         <TextView
             android:text="@string/text_add_time_table"
             style="@style/toolbar_title" />
      </RelativeLayout>
   </android.support.v7.widget.Toolbar>

   <RelativeLayout
       android:id="@+id/btnCalendar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <ImageView
          android:id="@+id/imgCalendar"
          android:src="@drawable/ic_calendar"
          android:background="@drawable/layout_border_conor_left"
          android:padding="15dp"
          android:layout_marginLeft="8dp"
          android:layout_width="56dp"
          android:layout_height="56dp" />
      <TextView
          android:id="@+id/tvCalendar"
          android:layout_toRightOf="@id/imgCalendar"
          android:layout_marginRight="8dp"
          android:layout_width="match_parent"
          android:layout_height="56dp"
          android:paddingLeft="25dp"
          android:text="-"
          android:textSize="16sp"
          android:textColor="@color/color_gray_m"
          android:background="@drawable/layout_border_conor_right"
          android:gravity="center|left"/>
   </RelativeLayout>

   <LinearLayout
       android:layout_marginTop="8dp"
       android:orientation="horizontal"
       android:weightSum="2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <RelativeLayout
          android:id="@+id/btnSubject"
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <ImageView
             android:id="@+id/imgSubject"
             android:src="@drawable/ic_book"
             android:background="@drawable/layout_border_conor_left"
             android:padding="15dp"
             android:layout_marginLeft="8dp"
             android:layout_width="56dp"
             android:layout_height="56dp" />
         <TextView
             android:id="@+id/tvSubject"
             android:layout_toRightOf="@id/imgSubject"
             android:layout_marginRight="8dp"
             android:layout_width="match_parent"
             android:layout_height="56dp"
             android:paddingLeft="25dp"
             android:text="-"
             android:textSize="16sp"
             android:textColor="@color/color_gray_m"
             android:background="@drawable/layout_border_conor_right"
             android:gravity="center|left"/>
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/btnCourse"
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <ImageView
             android:id="@+id/imgCourse"
             android:src="@drawable/ic_book"
             android:background="@drawable/layout_border_conor_left"
             android:padding="15dp"
             android:layout_marginLeft="8dp"
             android:layout_width="56dp"
             android:layout_height="56dp" />
         <TextView
             android:id="@+id/tvCourse"
             android:layout_toRightOf="@id/imgCourse"
             android:layout_marginRight="8dp"
             android:layout_width="match_parent"
             android:layout_height="56dp"
             android:paddingLeft="25dp"
             android:text="-"
             android:textSize="16sp"
             android:textColor="@color/color_gray_m"
             android:background="@drawable/layout_border_conor_right"
             android:gravity="center|left"/>
      </RelativeLayout>
   </LinearLayout>

   <RelativeLayout
       android:layout_marginTop="8dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <ImageView
          android:id="@+id/imgTutor"
          android:src="@drawable/ic_human_gray"
          android:background="@drawable/layout_border_conor_left"
          android:padding="15dp"
          android:layout_marginLeft="8dp"
          android:layout_width="56dp"
          android:layout_height="56dp" />
      <EditText
          android:id="@+id/tvTutor"
          android:layout_toRightOf="@id/imgTutor"
          android:layout_marginRight="8dp"
          android:layout_width="match_parent"
          android:layout_height="56dp"
          android:paddingLeft="25dp"
          android:text="-"
          android:textSize="16sp"
          android:textColor="@color/color_gray_m"
          android:background="@drawable/layout_border_conor_right"
          android:gravity="center|left"/>
   </RelativeLayout>

</LinearLayout>
