<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".tutor.adapter.home.course.TutorSeeCourseAllAdapter">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/layout_border_conor">

        <ImageView
            android:id="@+id/imgStudent"
            android:src="@mipmap/ic_launcher"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:background="@drawable/layout_border_conor"/>

        <RelativeLayout
            android:layout_toRightOf="@id/imgStudent"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingLeft="5dp">
            <ImageView
                android:id="@+id/imgMenu"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentRight="true"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginRight="2dp"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/tvCourseName"
                android:text="Course Name"
                android:layout_marginLeft="8dp"
                style="@style/textview_student_name" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_toRightOf="@id/imgCircle"
                android:layout_below="@id/tvCourseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:textSize="16sp"
                android:text="300à¸¿/Hrs"
                android:textStyle="bold"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/layout_border_conor_blone"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tvCourse"
                android:text="asdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasd"
                android:layout_below="@id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:maxLines="5"
                android:ellipsize="end"
                android:textColor="@color/color_gray_m"/>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>